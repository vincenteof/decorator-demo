{
  "compilerOptions": {
    "module": "ES6",
    "lib": ["es6", "dom"],
    "target": "ES2015",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "dist/types/",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
